# --- Common Environment Variables ---
ENVIRONMENT=development
COMMON_NETWORK=microservices-network

# --- Database Configuration (Example if shared) ---
# DB_HOST=database_service # If you add a database service in docker-compose.yml
# DB_PORT=5432
# DB_USER=user
# DB_PASSWORD=password
# DB_NAME=mydatabase

# --- Service Ports (Internal communication doesn't need host ports) ---
# Example internal ports services might listen on
AUTH_SERVICE_INTERNAL_PORT=3001
USER_SERVICE_INTERNAL_PORT=3002
POST_SERVICE_INTERNAL_PORT=3003

# --- API Gateway Port (Exposed to host) ---
API_GATEWAY_PORT=8080

# --- Secrets ---
JWT_SECRET=your_super_secret_and_strong_key

# --- Other Common Settings ---
LOG_LEVEL=info

# APIのホストとポート。ネットワーク内での通信に使用
API_HOST=auth-service
API_PORT=8080

# auth-serviceコンテナへホストPCからアクセスするためのホストとポート
AUTH_SERVICE_HOST=localhost
AUTH_SERVICE_PORT=8080

#%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
# auth-serviceの環境変数設定
# 環境設定
ENVIRONMENT=development

# ロギング設定
LOG_LEVEL=INFO
LOG_TO_FILE=False
LOG_FILE_PATH=logs/auth_service.log

POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=my_database_user
POSTGRES_PASSWORD=my_database_password
POSTGRES_DB=my_database
TIME_ZONE=Asia/Tokyo

REDIS_HOST=redis
REDIS_PORT=6379

# 初期管理者ユーザーの設定
INITIAL_ADMIN_USERNAME=admin
INITIAL_ADMIN_PASSWORD=admin_password

# トークン設定
SECRET_KEY=your-secret-key-here
ALGORITHM=RS256
PRIVATE_KEY_PATH=keys/private.pem
PUBLIC_KEY_PATH=keys/public.pem
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# 代替設定: 環境変数に直接鍵の内容を設定する場合
# PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----
# PUBLIC_KEY=-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----

# APIのホストとポート。ネットワーク内での通信に使用
API_HOST=auth-service
API_PORT=8080

# auth-serviceコンテナへホストPCからアクセスするためのホストとポート
AUTH_SERVICE_HOST=localhost
AUTH_SERVICE_PORT=8080

# テスト用の環境変数
TEST_POSTGRES_HOST=test_db
TEST_POSTGRES_PORT=5433
TEST_POSTGRES_USER=my_test_database_user
TEST_POSTGRES_PASSWORD=my_test_database_password
TEST_POSTGRES_DB=my_test_database